<header class='page-headder'>
  <div class='btn-toolbar pull-right'>
    <div class='btn-group'>
      <%= link_to 'Edit Terminal', [ :edit, @agent, @terminal ],
          class: 'at-edit' %>
    </div>
    <div class='btn-group'>
      <%= link_to 'Delete Terminal', [ @agent, @terminal ], method: :delete, 
          class: 'at-delete',
          data: { confirm: 'Are you sure you want to delete this terminal?' } %>
    </div>
  </div>
 <h2><%= @agent.name %> <small>terminal <%= @terminal.name %></small></h2> 
</header>

<dl class='dl-horizontal'>
  <% Terminal.column_names.each do |column| %>
    <% next if %W{ game_id created_at updated_at }.include? column %>
    <dt><%= column %></dt><dd id='<%= column %>'><%= @terminal[column] %></dd>
  <% end %>
</dl>
