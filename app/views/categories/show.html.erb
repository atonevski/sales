<header class='page-headder'>
  <div class='btn-toolbar pull-right'>
    <div class='btn-group'>
      <% if policy(@game).update? %>
        <%= link_to 'Edit Category', [ :edit, @game, @category ],
            class: 'at-edit' %>
      <% end %>
    </div>
    <div class='btn-group'>
      <%= link_to 'Delete Category', [ @game, @category ], method: :delete, class: 'at-delete',
          data: { confirm: 'Are you sure you want to delete this category?' } %>
    </div>
  </div>
 <h2><%= @game.name %> <small>category <%= @category.category %></small></h2> 
</header>

<dl class='dl-horizontal'>
  <% Category.column_names.each do |column| %>
    <% next if %W{ game_id created_at updated_at }.include? column %>
    <dt><%= column %></dt><dd id='<%= column %>'><%= @category[column] %></dd>
  <% end %>
</dl>
