<h2>Games</h2>
<%= link_to 'New Game', new_game_path %>
<div class='table-responsive'>
  <table class='table table-striped table-condensed table-hover'>
    <thead>
      <tr>
        <th>Id</th>
        <th>Game</th>
        <th>Type</th>
        <th>Description</th>
        <th>Parent</th>
        <th>Price</th>
        <th>Volume</th>
        <th>Commission</th>
        <!-- add more columns for new/edit/delete -->
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game[:id] %></td>
          <td><%= game[:name] %></td>
          <td><%= game[:type] %></td>
          <td><%= truncate game[:desc], length: 40 %></td>
          <td><%= game[:parent] %></td>
          <td><%= game[:price] %></td>
          <td><%= game[:volume] %></td>
          <td><%= game[:commission] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
