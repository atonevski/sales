<div class='row col-md-6'>
  <%= form_for [:admin, user], html: { class: 'form-horizontal' } do |f| %>
    <!-- show errors -->
    <% if user.errors.any? %>
      <div id='error_explanation' class='alert alert-danger'>
        <h4><%= pluralize(user.errors.count, 'error') %>
          prohibited this user from being saved:</h4>
        <ul>
          <% user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='form-group'>
      <%= f.label :email, class: 'control-label col-md-3' %>
      <div class='col-md-9'>
        <%= f.email_field :email, required: "required",
            placeholder: 'Unique email identifier' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password, class: 'control-label col-md-3' %>
      <div class='col-md-9'>
        <%= f.password_field :password, required: 'required' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-md-offset-3 col-md-9'>
        <%= f.check_box :admin %>
        <%= f.label :admin, 'Is an admin?' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
