<div class='row col-md-6'>
  <%= form_for agent, html: { class: 'form-horizontal' } do |f| %>
    <!-- show errors -->
    <% if agent.errors.any? %>
      <div id='error_explanation' class='alert alert-danger'>
        <h4><%= pluralize(agent.errors.count, 'error') %>
          prohibited this agent from being saved:</h4>
        <ul>
          <% agent.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='form-group'>
      <%= f.label :id, 'Id', class: 'control-label col-md-2' %>
      <div class='col-md-10'>
        <%= f.number_field :id, class: 'no-spinner form-control', required: "required",
            min: '1', step: '1', placeholder: 'Unique int identifier' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-10'>
        <%= f.text_field :name, class: 'form-control', required: 'required',
            placeholder: 'Name of the agent as it appears on the system' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
