<h4>Importing sales</h4>
<% if @available_sales %>
  <div class='table-responsive'>
    <table class='table table-striped table-condensed table-hover'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Size</th>
          <th>Time</th>
          <th>Sales</th>
          <th>Payout</th>
        </tr>
      </thead>
      <tbody>
        <% @available_sales.each do |s| %>
          <tr>
            <td><%= s[:date] %></td>
            <td><%= s[:size] %></td>
            <td><%= s[:time] %></td>
            <td><%= s[:sales] %></td>
            <td><%= s[:payout] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @elapsed_time %>
    <p>Elapsed time <%= sprintf "%dm %ds", *@elapsed_time.divmod(60) %> (<%= @elapsed_time %>)</p>
  <% end %>

<% end %>
